{{- $email := promptStringOnce . "email" "Email address" -}}

[data]
  email = {{ $email | quote }}

[edit]
  command = "nvim"
  
[diff]
    command = "code"
    args = ["--diff", "{{ .Destination }}", "{{ .Target }}"]
    
[merge]
  command = "nvim"
  args = ["-d", "{{ .Destination }}", "{{ .Source }}", "{{ .Target }}"]
